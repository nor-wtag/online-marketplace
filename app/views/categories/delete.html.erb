<%= link_to("Back to list", categories_path, class: 'back-link') %>
<div class='categories delete'>
  <h2>Delete Category</h2>

  <%= form_with(model: @category, local: true, method: :delete) do |f| %>
    <p>Are you sure you want to delete this category?</p>
    <p class="reference-name"><%= f.object.name %></p>
    <div class='form-buttons'>
      <%= f.submit("Delete Category", class: 'btn btn-danger') %>
    </div>
  <% end %>
</div>
