<h2>Sign up</h2>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, required: true %>
  </div>


  <div class="field">
    <%= f.label :role %>
    <%= f.select :role, options_for_select([ ['Buyer', 'buyer'], ['Seller', 'seller'], ['Rider', 'rider']]), include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
